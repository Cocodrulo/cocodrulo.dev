---
import Badge from './Badge.astro'

interface Props {
    image: string
    title: string
    description: string
    date: string
    link?: string
}

const { image, title, description, date, link } = Astro.props
---

<article class="my-4 flex flex-col gap-5">
    <p class="opacity-80 -mb-4 text-sm lg:text-base">{date}</p>
    <div class="flex flex-row gap-5 items-center">
        <img class="size-8 object-cover" src={image} alt={title} />
        <h1 class="text-xl lg:text-2xl font-semibold">{title}</h1>
    </div>
    <p class="text-base lg:text-xl opacity-90">{description}</p>
    {
        link && (
            <Badge link={link} imgLink={image}>
                {link}
            </Badge>
        )
    }
</article>
