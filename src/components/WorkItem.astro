---
import Badge from './Badge.astro'

interface Props {
    image: string
    title: string
    description: string
    techs: string[]
    date: string
    link?: string
}

const { image, title, description, techs, date, link } = Astro.props
---

<article class="my-4 flex flex-col gap-5 scroll">
    <p class="opacity-80 -mb-4 text-sm lg:text-base">{date}</p>
    <div class="flex flex-row gap-5 items-center">
        <img
            class="h-8 w-auto object-contain"
            src={image}
            alt={`Logo of an Project`}
        />
        <h1 class="text-xl lg:text-2xl font-semibold">{title}</h1>
    </div>
    <p class="text-base lg:text-xl opacity-90">{description}</p>
    <div class="flex flex-row flex-wrap gap-5">
        {
            techs.map((item: string) => {
                return <Badge icon={item}>{item}</Badge>
            })
        }
    </div>
    {link && <Badge link={link}>{link}</Badge>}
</article>
