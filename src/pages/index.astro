---
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import Me from '@/assets/images/me.jpg'
import Container from '@/components/Container.astro'
import WorkItem from '@/components/WorkItem.astro'

const MYWORKS = [
    {
        title: 'LionRP',
        description:
            'A FiveM roleplay server for GTA V. Also the webpage for LionCommunity.',
        techs: [
            'HTML',
            'CSS',
            'JavaScript',
            'Lua',
            'Astro',
            'TailwindCSS',
            'MariaDB',
            'MySQL',
        ],
        date: '2021 - Currently',
        link: 'https://lioncommunity.es',
        image: 'https://lioncommunity.es/favicon.svg',
    },
    {
        title: 'Discord Bots',
        description:
            'A collection of Discord bots made with Discord.js and Node.js for multiple usages.',
        techs: ['NodeJS', 'DiscordJS', 'JavaScript', 'MongoDB'],
        date: '2021 - Currently',
        image: 'https://cdn.prod.website-files.com/6257adef93867e50d84d30e2/62fddf0fde45a8baedcc7ee5_847541504914fd33810e70a0ea73177e%20(2)-1.png',
    },
    {
        title: 'Ardens.es',
        description: 'The website of Ardens, a clothes selling company.',
        techs: [
            'Astro',
            'CSS',
            'TypeScript',
            'Snipcart',
            'TailwindCSS',
            'JavaScript',
            'MySQL',
        ],
        date: 'June 2024 - July 2024',
        link: 'https://ardens.es',
        image: 'https://ardens.es/favicon.svg',
    },
]
---

<Layout>
    <div class="w-full flex flex-col gap-10 py-12">
        <Container class="py-5 mx-auto mb-11">
            <Image
                src={Me}
                alt="Javier Pérez Romero"
                width={200}
                height={200}
                decoding="async"
                loading="eager"
                class={'size-12 md:size-16 lg:size-28 rounded-full object-cover object-top mb-8'}
            />
            <h1 class="text-3xl md:text-4xl lg:text-6xl mb-8">
                Javier Pérez Romero
            </h1>
            <p
                class="text-lg md:text-xl lg:text-2xl opacity-80 mt-5 max-w-[550px] text-pretty"
            >
                I am a software developer settled in Gran Canaria, Canary
                Islands, Spain. I am currently studying a degree in Computer
                Engineering at the University of Las Palmas de Gran Canaria.
            </p>
        </Container>
        <Container id="work">
            <h2 class="text-3xl md:text-4xl lg:text-6xl mb-5 md:mb-8 lg:mb-11">
                My Work
            </h2>
            <div class="flex flex-col gap-y-5">
                {
                    MYWORKS.map((item) => {
                        const { title, description, image, techs, date, link } =
                            item
                        return (
                            <WorkItem
                                title={title}
                                description={description}
                                image={image}
                                techs={techs}
                                date={date}
                                link={link}
                            />
                        )
                    })
                }
            </div>
        </Container>
    </div>
</Layout>
