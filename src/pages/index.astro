---
import Layout from '@/layouts/Layout.astro'
import { Image } from 'astro:assets'
import Me from '@/assets/images/me.jpg'
---

<Layout>
    <div
        class="h-[80vh] w-full flex justify-center items-center flex-col lg:flex-row text-center gap-10"
    >
        <Image
            src={Me}
            alt="Javier Pérez Romero"
            width={200}
            height={200}
            decoding="async"
            loading="eager"
        />
        <article class="p-5">
            <h1 class="text-6xl">Hi, my name is Javier Pérez</h1>
            <p class="text-2xl opacity-80 mt-5">
                I am a software developer settled in Gran Canaria, Canary
                Islands, Spain
            </p>
        </article>
    </div>
</Layout>

<style>
    img {
        border-radius: 50%;
        width: 200px;
        height: 200px;
        object-fit: cover;
        object-position: top;
    }
</style>
