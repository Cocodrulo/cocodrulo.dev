---
import Layout from '@/layouts/Layout.astro'
---

<Layout>
    <div
        class="h-[80vh] w-full flex justify-center items-center flex-col text-center gap-10"
    >
        <article data-link="https://ardens.es">
            <h1>Ardens.es</h1>
            <p>The website of Ardens, a clothes selling company</p>
        </article>
    </div>
</Layout>

<script>
    import { $ } from '@/libs/dom-selector'

    $('article[data-link]').addEventListener('click', (e: MouseEvent) => {
        const element = e?.target as HTMLLabelElement
        window.open(element.dataset['link'])
    })
</script>

<style>
    article {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 0.5rem;
        border: 2px solid var(--bg-light);
        border-radius: 10px;
        padding: 20px;
        position: relative;
        overflow: hidden;
        transition: all 0.2s linear;
    }

    article:hover {
        scale: 1.1;
        transition: all 0.2s linear;
    }

    article:active {
        scale: 0.95;
        transition: all 0.2s linear;
    }

    article:hover:after {
        content: 'Acceder';
        width: 100%;
        height: calc(100% + 20px);
        top: -20px;
        position: absolute;
        background: rgb(127, 160, 125);
        display: flex;
        justify-content: center;
        align-items: center;
        font-size: 5rem;
        transition: all 0.2s linear;
    }

    h1 {
        font-size: 5rem;
    }

    p {
        font-size: 1.5rem;
        opacity: 0.8;
    }

    img {
        border-radius: 50%;
        width: 200px;
        height: 200px;
        object-fit: cover;
        object-position: top;
    }
</style>
